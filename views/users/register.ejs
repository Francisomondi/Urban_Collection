 <div class="container">
    <div class="raw mt-5">
        <div class="col-md-6 m-auto ">
            <div class="card card-body text-center">
                <form class="form-signin" action="/users/register" method="POST">
                    <img class="mb-4" src="/images/a.png" alt="" width="100" height="100">
                    <h1 class="h3 mb-8 font-weight-normal">Please create an account</h1>
                    
                    <%#- include ('./partials/messages'); %>
                   

                    <div class="form-group col-md-12">
                        
                        <input type="text" name="name" class="form-control" placeholder="Name"
                            value="<%= typeof name != 'undefined' ? name : '' %>">
                    </div>
                    <div class="form-group col-md-12">
                        
                        <input type="text" name="username" class="form-control" placeholder="UserName"
                            value="<%= typeof username != 'undefined' ? username : '' %>">
                    </div>
                    <div class="form-group col-md-12">
                        
                        <input type="email" name="email" class="form-control" id="email" placeholder="Email"
                            value="<%= typeof email != 'undefined' ? email : '' %>">
                    </div>
                    <div class="form-group col-md-12">
                    
                        <input type="text" name="phone" class="form-control" placeholder="Phone "
                            value="<%= typeof phone != 'undefined' ? phone : '' %>">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="password" name="password" class="form-control" id="password" placeholder="Password"
                            value="<%= typeof password != 'undefined' ? password : '' %>">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="password" name="password2" class="form-control" id="password2"
                            placeholder="confirm password"
                            value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
                    </div>
                    <br>

                    <div class="form-group col-md-12">
                        <button class="btn btn-lg btn-danger btn-block" type="submit">Register</button>
                    </div>
                    <div class="form-group col-md-12">
                        <p>Already have an Account? please<a href="/users/login">login</a></p>
                    </div>

                </form>
            </div>
        </div>
    </div>

</div>

