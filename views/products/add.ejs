<%- include ('../layouts/header') %>
<div class="container">
    <a href="/" class="btn btn-danger">Back</a>
    <div class="raw mt-5">
        <div class="col-md-6 m-auto ">
            <div class="card card-body text-center">
                <% if(errors) { %>
                <% errors.forEach((error)=> { %>
                <div class="alert alert-danger">
                    <%= error.msg %>
                </div>
                <% }); %>
                <% } %>

                <form class="form-signin" action="/products/add" method="POST">
                    <img class="mb-4" src="/images/v.png" alt="" width="100" height="100">
                    <h1 class="h3 mb-8 font-weight-normal">Add product</h1>
    
                    <div class="form-group col-md-12">
    
                        <input type="text" name="name" class="form-control" placeholder="Name"
                            value="<%= products.name %>">
                    </div>
                    <div class="form-group col-md-12">
    
                        <textarea name="description" class="form-control" placeholder="Description"
                            >"<%= products.description %>"</textarea>
                    </div>
                    <div class="form-group col-md-12">
    
                        <input type="price" name="price" class="form-control" id="price" placeholder="Price"
                            value="<%= products.price %>">
                    </div>
                    <div class="form-group col-md-12">
    
                        <input type="text" name="manufacture" class="form-control" placeholder="manufacture "
                            value= <%= products.manufacture %>>
                    </div>
                    <div class="form-group col-md-12">
    
                        <input type="text" name="category" class="form-control" placeholder="category "
                            value="<%= products.category %>">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" name="image" class="form-control" id="image" placeholder="Image"
                           value="<%= products.image %>">
                    </div>
    
                    <br>
                    <div class="form-group col-md-12">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Add product</button>
                        <a href="/" class="btn btn-lg btn-secondary btn-block" type="submit">cancel</a>
                    </div>
    
    
                </form>
            </div>
        </div>
    </div>


    <%- include ('../layouts/footer') %> %>

