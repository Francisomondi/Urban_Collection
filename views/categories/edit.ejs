<%- include ('../layouts/header') %>
<div class="container">
    <a href="/" class="btn btn-danger">Back</a>
    <div class="raw mt-5">
        <div class="col-md-6 m-auto ">
            <div class="card card-body text-center">
                <% if(errors) { %>
                <% errors.forEach((error)=> { %>
                <div class="alert alert-danger">
                    <%= error.msg %>
                </div>
                <% }); %>
                <% } %>

                <form class="form-signin" action="/categories/<%= categories.id %>?_method=PUT" method="POST">
                    <img class="mb-4" src="/images/a.png" alt="" width="100" height="100">
                    <h1 class="h3 mb-8 font-weight-normal">Edit category</h1>

                    <div class="form-group col-md-12">

                        <input type="text" name="name" class="form-control" placeholder="Name"
                            value="<%= categories.name %>">
                    </div>
                   
                    <br>
                    <div class="form-group col-md-12">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Update category</button>
                        <a href="/" class="btn btn-lg btn-secondary btn-block" type="submit">cancel</a>
                    </div>


                </form>
            </div>
        </div>
    </div>


    <%- include ('../layouts/footer') %> %>